<head>
  <title>TO DO</title>
  <% content_for :js do%>
    <%= javascript_import_module_tag "todos/new"%>
  <% end %>
</head>

<div class="max-w-max mx-auto">
  <h1 class="text m-4 px-4 py-2 text-center font-bold text-4xl flex animate-tracking-in-expand">
    やるべきことを記録しよう
  </h1>

<%= form_with model: @todo do |form| %>
  <div id="text" class="w-full m-4 px-4 py-2 rounded-lg">
    <%= form.text_field :content, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"%>
  <% if @todo.errors.full_messages_for(:content).any? %>
  <ul>
    <% @todo.errors.full_messages_for(:content).each do |message| %>
    <li><%= message %>
    <% end %>
  </ul>
  <% end %>
  </div>
  <div class="flex items-center justify-end">
    <%= form.submit "保存", class: "px-4 py-2 bg-slate-300 border rounded-md shadow-sm hover:opacity-80 transition duration-500 active:translate-y-1" %>
  </div>
<% end %>

    <span id="message" class="text-green-300 opacity-0 transition-opacity duration-500">
      保存しました
    </span>
    <%# <button id="clear" class="px-2 py-1 bg-slate-300 border rounded-md shadow-sm hover:opacity-80 transition duration-500 active:translate-y-1">
      削除
    </button> %>
</div>
